rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // White-label app collections
    match /apps/{appId} {
      
      // App configuration (read by all authenticated users, write by admins only)
      match /config/{configId} {
        allow read: if isSignedIn();
        allow write: if false; // Admin only - manage via Firebase Console
      }
      
      // Users collection
      match /users/{userId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
        
        // FCM tokens subcollection
        match /fcmTokens/{tokenId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      // Service providers collection
      match /service_providers/{providerId} {
        allow read: if isSignedIn();
        allow write: if isOwner(providerId);
      }
      
      // Cars collection
      match /cars/{carId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
      
      // Packages collection (service packages offered by providers)
      match /packages/{packageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.providerId == request.auth.uid;
      }
      
      // Service packages (system-wide)
      match /servicePackages/{packageId} {
        allow read: if isSignedIn();
        allow write: if false; // Admin only
      }
      
      // Addons
      match /addons/{addonId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.providerId == request.auth.uid;
      }
      
      // ⭐ SLOTS COLLECTION - THIS IS CRITICAL FOR SLOT GENERATION ⭐
      match /slots/{slotId} {
        allow read: if isSignedIn();
        // Allow providers to create and update their own slots
        allow create: if isSignedIn();
        allow update: if isSignedIn() && resource.data.providerId == request.auth.uid;
        allow delete: if isSignedIn() && resource.data.providerId == request.auth.uid;
      }
      
      // ⭐ SCHEDULE CONFIGS - CRITICAL FOR SCHEDULE CONFIGURATION ⭐
      match /schedule_configs/{configId} {
        allow read: if isSignedIn();
        // Allow providers to manage their own schedule configs
        allow create: if isSignedIn();
        allow update: if isSignedIn() && resource.data.providerId == request.auth.uid;
        allow delete: if isSignedIn() && resource.data.providerId == request.auth.uid;
      }
      
      // Bookings collection
      match /bookings/{bookingId} {
        allow read: if isSignedIn() && (
          resource.data.userId == request.auth.uid || 
          resource.data.providerId == request.auth.uid
        );
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (
          resource.data.userId == request.auth.uid || 
          resource.data.providerId == request.auth.uid
        );
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
      
      // Reviews collection
      match /reviews/{reviewId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }
    
    // Global collections can be added here if needed
  }
}
